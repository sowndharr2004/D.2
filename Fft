clc;

clear all;

close all;

x = input('Enter the first input sequence x(n) :):

h = input('Enter the second input sequence h(n) :^ prime );

n 1=| length(x);

n * 2 = 1 length(h);

n =n1+n2-1

X = fft(x, n)

H = fft(h, n)

Y = X *Î—;

y=ifft(Y);

disp('linear convolution output is:');

disp(y);

t * 1 = 0 / n * 1 - 1

subplot(1,3,1);

stem(t1,x);

xlabel('n');

ylabel('Amplitude');

title('first input sequence');

t * 2 = 0 / n * 2 - 1

subplot(1,3,2);

stem(12,h);

xlabel('n');

ylabel('Amplitude');

title('second input sequence');

t = (0/1) / n - 1

subplot(1,3,3);

stem(t,y);

xlabel('n');

ylabel('Amplitude');

title('output sequence');
